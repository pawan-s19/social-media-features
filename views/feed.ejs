    rel="stylesheet"
  />
  <link rel="stylesheet" href="/stylesheets/feed.css" />
  <body>
    <div id="main">
      <div id="nav">
        <div class="icon align-items">
          <img src="/icon/download-removebg-preview.png" alt="" />
          <div class="search">
            <input type="text" placeholder="Search" />
          </div>
        </div>

        <div class="links align-items">
          <a href="" class="friends align-items">
            <i class="ri-group-line"></i>
            Friends
          </a>
          <a href="" class="chat align-items">
            <i class="ri-chat-3-line"></i>
            Messages
          </a>
          <a href="" class="notifications align-items">
            <i class="ri-notification-line"></i>
            Notifications
          </a>
          <button class="settings align-items btn">
            <i class="ri-settings-line"></i>
            Settings
          </button>
        </div>
      </div>
      <div class="content">
        <div class="left">
          <div class="profile">
            <div class="psection">
              <div class="profile-img img-container">
                <img
                  class="img-styling"
                  src="<%=loggedInUser.profilePic%>"
                  alt=""
                />
              </div>
              <div class="name">
                <h6 class="name-aligner"><b><%=loggedInUser.username%></b></h6>
                <h6>India</h6>
              </div>
            </div>
          </div>
        </div>
        <div class="right">
          <div class="post">
            <div class="rsection">
              <div class="makepost">
                <div class="profileimg img-container">
                  <img
                    class="img-styling"
                    src="<%=loggedInUser.profilePic%>"
                    alt=""
                  />
                </div>
                <form action="/post" method="post" class="w-100 d-flex">
                  <textarea
                    type="text"
                    placeholder="Share something...."
                    name="tarea"
                  ></textarea>
                  <button class="btn fs-5" type="submit">
                    <i class="ri-send-plane-2-line"></i>
                  </button>
                </form>
              </div>
              <div
                class="options d-flex align-items-center justify-content-between"
              >
                <div class="l align-items">
                  <a href="" class="upload-image align-items">
                    <i class="ri-image-fill"></i>
                    Image
                  </a>
                  <a href="" class="upload-video align-items">
                    <i class="ri-video-fill"></i>
                    Video
                  </a>
                  <a href="" class="mention align-items">
                    <i class="ri-at-fill"></i>
                    Mention
                  </a>
                </div>
                <button
                  class="btn align-items-center fs-6"
                  style="color: rgb(163, 163, 163)"
                >
                  Public
                  <i class="ri-arrow-down-line"></i>
                </button>
              </div>
            </div>
          </div>
          <%allPosts.forEach(function(elem){%>
          <div class="feed">
            <div class="post-section d-flex">
              <div class="profile-img img-container">
                <img
                  class="img-styling"
                  src="<%=elem.userId.profilePic%>"
                  alt=""
                />
              </div>
              <div class="name">
                <h6 class="name-aligner"><b><%=elem.userId.username%></b></h6>
                <h6 style="color: rgb(163, 163, 163); font-size: 0.9vw">
                  2 hours ago
                </h6>
              </div>
            </div>
            <div class="actual-post">
              <p><%=elem.post%></p>
              <!-- <div class="post-image">
                <img class="image-styling" src="" alt="" />
              </div> -->
              <div class="grid-options d-flex">
                <a href="/like/<%=elem.id%>" class="d-flex align-items-center">
                  <i class="ri-heart-fill"></i>
                  <%=elem.likes.length%>
                </a>
                <a href="" class="d-flex align-items-center">
                  <i class="ri-chat-3-line"></i>
                  <%=elem.comments.length%>
                </a>
              </div>
            </div>
          </div>
          <%})%>
        </div>
      </div>
    </div>

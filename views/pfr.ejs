<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%if(loggedInUser.pendingFriendRequests.length===0){%>
    <h2 class="m-3">No pending Friend requests</h2>
    <%}else{%> <%loggedInUser.pendingFriendRequests.forEach(function(elem){%>
    <div class="d-flex container m-3 w-25 justify-content-between">
      <h2><%=elem.username%></h2>
      <div>
        <a href="/accept/<%=elem.id%>" class="btn btn-primary">accept</a>
        <a href="/reject/<%=elem.id%>" class="btn btn-danger">reject</a>
      </div>
    </div>
    <%})%> <%}%>
  </body>
</html>

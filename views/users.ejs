<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <style>
    .fre {
      display: flex;
      justify-content: space-between;
      width: 30%;
      align-items: center;
    }
    .fre button {
      height: 40px;
      border-radius: 10px;
      border: none;
    }
  </style>
  <body>
    <%allUsers.forEach(function(elem){%> <%if(loggedInUser.id == elem.id){%>
    <%}else{%>
    <div class="fre m-3">
      <h1><%=elem.username%></h1>
      <%if(loggedInUser.requestSent.indexOf(elem.id) !=-1){%>
      <a href="/undo/<%=elem.id%>" class="btn btn-danger">undo</a>
      <%}else if(loggedInUser.friends.indexOf(elem.id) !=-1){%>
      <p class="h3">friends</p>
      <%}else{%>
      <a href="/sendRequest/<%=elem.id%>" class="btn btn-primary"
        >send request</a
      >
      <%}%>
    </div>
    <%}%> <% })%>
  </body>
</html>
